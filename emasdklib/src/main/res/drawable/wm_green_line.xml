<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--底层使用蓝色填充色-->
    <item>
        <shape>
            <solid android:color="@color/colorGreenText"/>
        </shape>
    </item>
    <!--上面一层距离底层的顶部1dp,类似marginTop,填充色为白色，这样就形成了一个带有蓝色顶部边线的白色背景的图-->
    <item android:bottom="1dip">
        <shape>
            <solid android:color="@color/colorPanelGrey"/>
        </shape>
    </item>
</layer-list>



