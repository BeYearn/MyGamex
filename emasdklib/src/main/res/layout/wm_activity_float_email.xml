<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_full"
    android:orientation="vertical">
    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="1">

        <include layout="@layout/wm_float_title"></include>
    </LinearLayout>

    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="5"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="20"
            android:orientation="vertical">
            <LinearLayout
                style="@style/layout_vertical"
                android:layout_weight="20">
                <ListView

                    android:divider="#00000000"
                    android:dividerHeight="5dp"
                    android:id="@+id/wm_email_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:listSelector="#00000000"
                    >
                </ListView>
                <LinearLayout
                    android:id="@+id/wm_email_detail"
                    style="@style/layout_full"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        style="@style/layout_vertical"
                        android:layout_weight="16"
                        android:background="@drawable/wm_green_light_bg"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/email_detail_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/colorBlueFocus"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/email_detail_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:scrollbars="vertical"
                            android:singleLine="false"
                            android:textSize="14sp"
                            android:textColor="#999"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/layout_vertical"
                        android:layout_weight="4"
                        android:layout_marginTop="5dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <Button
                            android:id="@+id/remove_email_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/wm_button_gray"
                            android:textColor="@color/colorWhiteText"
                            android:text="删除"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"/>
                        <Button
                            android:id="@+id/back_email_list_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/wm_button_blue"
                            android:textColor="@color/colorWhiteText"
                            android:text="返回"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/layout_vertical"
                android:layout_weight="1">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>


</LinearLayout>