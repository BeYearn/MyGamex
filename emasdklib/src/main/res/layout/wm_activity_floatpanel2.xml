<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_full"
    android:orientation="vertical">
    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="1">
        <include layout="@layout/wm_float_title"></include>
    </LinearLayout>
    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="5"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="10">
            </LinearLayout>
        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="40"
            android:orientation="vertical">
            <LinearLayout
                style="@style/layout_vertical"
                android:layout_weight="2">

            </LinearLayout>

            <LinearLayout
                style="@style/layout_vertical"
                android:layout_weight="8"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/wm_info_face"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/wm_info_face"/>

            </LinearLayout>
            <LinearLayout
                style="@style/layout_vertical"
                android:layout_weight="4"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/wm_info_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="willhao"/>
            </LinearLayout>
            <LinearLayout
                style="@style/layout_vertical"
                android:layout_weight="4"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/wm_info_money"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="余额：0.00"/>
            </LinearLayout>
            <LinearLayout
                style="@style/layout_vertical"
                android:layout_weight="12"
                android:orientation="vertical">
                <Button
                    android:id="@+id/wm_info_pay_button"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorGreenText"
                    android:text="充值"
                    android:textStyle="bold"
                    android:background="@drawable/wm_info_pay_button"/>
            </LinearLayout>
            <LinearLayout
                style="@style/layout_vertical"
                android:layout_weight="2">
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="10">
        </LinearLayout>
        <LinearLayout
            style="@style/layout_horizontal"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:layout_weight="75">
            <LinearLayout
                style="@style/layout_vertical"
                android:layout_weight="8">
                <GridView
                    android:id="@+id/wm_info_blocklist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="1dp"
                    android:horizontalSpacing="1dp">

                </GridView>
            </LinearLayout>
            <LinearLayout
                style="@style/layout_vertical"
                android:background="@drawable/wm_info_block_bg"
                android:layout_weight="1">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_gravity="center"
                    android:background="@drawable/wm_info_autologin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|left"
                    android:layout_weight="5"
                    android:layout_marginLeft="20dp"
                    android:text="自动登录设置"/>
                <CheckBox
                    android:id="@+id/wm_autologin_ckbox"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:button="@null"
                    android:background="@drawable/wm_checkbox_newselect"/>
            </LinearLayout>
            <LinearLayout
                style="@style/layout_vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="开启后，将使用最近登录的帐号自动登录游戏"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="3">
        </LinearLayout>
    </LinearLayout>

</LinearLayout>