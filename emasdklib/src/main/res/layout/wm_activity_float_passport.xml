<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPanelGrey"
    android:orientation="vertical">

    <include layout="@layout/wm_float_title"></include>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/wm_layout_passport"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/wm_old_pass"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/wm_float_edittext_bg"
                android:hint="请输入原密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textSize="12sp"
                android:singleLine="true"
                android:textColorHint="@color/viewfinder_mask"
                android:paddingLeft="80dp">

            </EditText>
            <TextView
                android:layout_width="80dp"
                android:layout_height="44dp"
                android:text="原密码"
                android:layout_gravity="center"
                android:textColor="@color/colorDarkText"
                android:textSize="12sp"
                android:gravity="center" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/wm_new_pass"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/wm_float_edittext_bg"
                android:hint="6-20位字母或数字，区分大小写"
                android:textColorHint="@color/viewfinder_mask"
                android:maxLength="20"
                android:inputType="textPassword"
                android:textSize="12sp"
                android:singleLine="true"
                android:paddingLeft="80dp">

            </EditText>
            <TextView
                android:layout_width="80dp"
                android:layout_height="44dp"
                android:text="新密码"
                android:textColor="@color/colorDarkText"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/wm_new_pass_check"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/wm_float_edittext_bg"
                android:hint="6-20位字母或数字，区分大小写"
                android:textColorHint="@color/viewfinder_mask"
                android:maxLength="20"
                android:inputType="textPassword"
                android:textSize="12sp"
                android:singleLine="true"
                android:paddingLeft="80dp">

            </EditText>
            <TextView
                android:layout_width="80dp"
                android:layout_height="44dp"
                android:text="确认密码"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorDarkText"
                android:gravity="center" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/wm_changepass_btn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/wm_button_blue"
                android:text="立即修改"
                android:textColor="@color/colorWhiteText" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wm_layout_passport_mobile"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/wm_bind_mobile"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:text="您的手机号：133***565656"
            android:textSize="18sp"
           >

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="4dp"
            android:text="为了您帐号的安全，您需要验证绑定的手机号。">

        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/wm_mobile_pass"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/wm_float_edittext_bg"
                android:hint="6-20位字母或数字，区分大小写"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textSize="12sp"
                android:singleLine="true"
                android:textColorHint="@color/viewfinder_mask"
                android:paddingLeft="80dp">

            </EditText>
            <TextView
                android:layout_width="80dp"
                android:layout_height="44dp"
                android:text="新密码"
                android:textColor="@color/colorDarkText"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:gravity="center" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/wm_mobile_code"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="6"
                android:textSize="12sp"
                android:background="@drawable/wm_float_edittext_bg"
                android:hint="请输入验证码"
                android:maxLength="6"
                android:singleLine="true"
                android:textColorHint="@color/viewfinder_mask"
                android:paddingLeft="10dp">

            </EditText>
            <Button
                android:id="@+id/wm_get_mobile_code"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/wm_button_blue"
                android:text="@string/wm_send_mobile_code"
                android:textColor="@color/colorWhiteText"
                android:textSize="13sp"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/get_mobile_code_time"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/wm_time_limit_text"
                android:textSize="13sp"
                android:textColor="@color/colorRedText"
                android:visibility="gone"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/set_pass_btn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/wm_button_blue"
                android:text="立即修改"
                android:textColor="@color/colorWhiteText" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>