<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_guided"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#292928"
        />

    <RelativeLayout
        android:id="@+id/rl_change_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5f000000"
        android:layout_gravity="top"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tv_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            />

        <ImageView
            android:id="@+id/iv_change_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/icon_change_account"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_guided"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        >

        <ImageView
            android:id="@+id/iv_guided_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_guided_logo"
            android:paddingBottom="100dp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/iv_guided_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            />

    </RelativeLayout>

</FrameLayout>
