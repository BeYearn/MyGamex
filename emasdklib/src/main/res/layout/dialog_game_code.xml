<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_again_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/bg_simple_dialog"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/ll_game_activation_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            >

            <TextView
                android:id="@+id/tv_game_activation_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_g_activation_code"
                android:textColor="@color/color_2"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_game_activation_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_verification_btn"
                android:gravity="center"
                android:padding="6dp"
                android:textColor="@color/color_3"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_game_activation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_game_activation_code"
            android:layout_centerHorizontal="true"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:singleLine="true"
            android:textColor="@color/color_4"
            android:textSize="12sp"
            android:visibility="invisible"
            />

        <Button
            android:id="@+id/btn_game_activation_dole"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/tv_game_activation_time"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_account_btn"
            android:gravity="center"
            android:text="@string/str_g_copy"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_game_activation_dole"
            android:layout_centerHorizontal="true"
            android:paddingTop="12dp"
            android:text="@string/str_g_copy_error"
            android:textColor="@color/color_11"
            android:textSize="12sp"
            android:visibility="invisible" />

    </RelativeLayout>
</LinearLayout>